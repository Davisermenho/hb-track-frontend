# =============================================================================
# HB Track - Configuração de Testes E2E (Playwright)
# =============================================================================
# AMBIENTE E2E DETERMINÍSTICO
# Usuários e org criados pelo script: scripts/seed_e2e.py

# -----------------------------------------------------------------------------
# URLs
# -----------------------------------------------------------------------------

# URL base do frontend (onde os testes navegam)
PLAYWRIGHT_BASE_URL=http://localhost:3000

# URL base da API backend
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1

# -----------------------------------------------------------------------------
# FLAG E2E (para guards e feature flags)
# -----------------------------------------------------------------------------
E2E=1
NEXT_PUBLIC_E2E=1

# -----------------------------------------------------------------------------
# IDs FIXOS E2E (para referência em testes)
# -----------------------------------------------------------------------------
E2E_ORG_ID=e2e00000-0000-0000-0000-000000000001
E2E_TEAM_BASE_ID=e2e00000-0000-0000-0004-000000000001

# -----------------------------------------------------------------------------
# CREDENCIAIS DE TESTE - ADMIN (superadmin)
# -----------------------------------------------------------------------------
TEST_ADMIN_EMAIL=e2e.admin@teste.com
TEST_ADMIN_PASSWORD=Admin@123

# -----------------------------------------------------------------------------
# CREDENCIAIS DE TESTE - DIRIGENTE (REMOVIDO - admin já é dirigente)
# -----------------------------------------------------------------------------
# TEST_DIRIGENTE_EMAIL=e2e.dirigente@teste.com
# TEST_DIRIGENTE_PASSWORD=Admin@123

# -----------------------------------------------------------------------------
# CREDENCIAIS DE TESTE - COORDENADOR
# -----------------------------------------------------------------------------
TEST_COORDENADOR_EMAIL=e2e.coordenador@teste.com
TEST_COORDENADOR_PASSWORD=Admin@123

# -----------------------------------------------------------------------------
# CREDENCIAIS DE TESTE - COACH (TREINADOR)
# -----------------------------------------------------------------------------
TEST_COACH_EMAIL=e2e.treinador@teste.com
TEST_COACH_PASSWORD=Admin@123

# -----------------------------------------------------------------------------
# CREDENCIAIS DE TESTE - ATLETA
# -----------------------------------------------------------------------------
TEST_ATLETA_EMAIL=e2e.atleta@teste.com
TEST_ATLETA_PASSWORD=Admin@123

# -----------------------------------------------------------------------------
# CREDENCIAIS DE TESTE - MEMBRO (usuário convidado)
# -----------------------------------------------------------------------------
TEST_MEMBRO_EMAIL=e2e.membro@teste.com
TEST_MEMBRO_PASSWORD=Admin@123

# -----------------------------------------------------------------------------
# CREDENCIAIS DE TESTE - USER (fallback/compatibilidade)
# -----------------------------------------------------------------------------
TEST_USER_EMAIL=e2e.admin@teste.com
TEST_USER_PASSWORD=Admin@123

# -----------------------------------------------------------------------------
# DATABASE (Opcional - para seed/cleanup)
# -----------------------------------------------------------------------------
# Conexão direta ao banco de testes E2E local (Docker)

DATABASE_URL_TEST=postgresql://hbtrack_dev:hbtrack_dev_pwd@localhost:5433/

# -----------------------------------------------------------------------------
# OPÇÕES DE TESTE
# -----------------------------------------------------------------------------

# Rodar em modo headed (com janela visível)
HEADED=false

# Timeout adicional para cold start do backend
# API_TIMEOUT_MS=15000

# Nível de log (debug, info, warn, error)
LOG_LEVEL=info


